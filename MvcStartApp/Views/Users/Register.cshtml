@model MvcStartApp.Models.Db.User;
@{
    ViewData["Title"] = "Register new author";
}

<div class="text-center">
    <div>
        @if(Model == null)
        {
            <h3 style="text-align: left;">
                Добро пожаловать в наш блог!
            </h3>

            <br />

            <form method="post">
                <table>
                    <tr>
                        <td>
                            Имя:
                        </td>
                        <td>
                            <input type="text" name="FirstName"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Фамилия:
                        </td>
                        <td>
                            <input type="text" name="LastName" />
                        </td>
                    </tr>
                </table>
                <br />
                <div class="submit-button">
                    <button type="submit">Регистрация</button>
                </div>
            </form>
        }
        else
        {
            @await Html.PartialAsync("_Thanks");
        }
    </div>
</div>